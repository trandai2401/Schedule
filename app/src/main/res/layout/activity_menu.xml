<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9FD6F3"
    tools:context=".menu">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:src="@drawable/img"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

  <TextView
      android:id="@+id/tenUserTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="Xin chào: Tăng Thu Hòa"
      android:textColor="@color/black"
      android:textSize="15sp"
      android:textStyle="bold" />
  <Button
      android:id="@+id/btn_xemtkb"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:textAllCaps="false"
      android:text="Xem thời khóa biểu"
      android:textSize="20sp"
      android:background="@drawable/bt_tron"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"/>

  <Button
      android:id="@+id/btnquanlicanhan"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:textAllCaps="false"
      android:text="Quản lý cá nhân"
      android:textSize="20sp"
      android:background="@drawable/bt_tron"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"/>

  <Button
      android:id="@+id/btnthemsk"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:textAllCaps="false"
      android:text="Thêm sự kiện"
      android:textSize="20sp"
      android:background="@drawable/bt_tron"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"/>

  <Button
      android:id="@+id/btn_timkiem"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:textAllCaps="false"
      android:text="Tìm kiếm"
      android:textSize="20sp"
      android:background="@drawable/bt_tron"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"/>

  <Button
      android:id="@+id/btndangxuat"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:textAllCaps="false"
      android:text="Đăng xuất"
      android:textSize="20sp"
      android:background="@drawable/bt_tron"
      android:onClick="logout_Click"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"/>
</LinearLayout>